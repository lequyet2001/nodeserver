<div class="card-group gx-5 mt-3">
    <div class="row ">
        {{#each products}}
        <div class="card col-xl-3 col-lg-3 col-md-6 col-sm-12 ">
            <a href="/products/{{this.slug}}"><img src="{{this.image}}" class="card-img-top" alt="..."></a>
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p>{{this.brand}}</p>
                <p class="card-price">{{this.price}}</p>
            </div>

        </div>
        {{/each}}
    </div>
</div>